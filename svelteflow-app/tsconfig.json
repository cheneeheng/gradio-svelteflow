{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$shared/*": ["../svelteflow/frontend/graph/*"]
    },
    "types": ["svelte"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2019", // or ES2020 depending on your needs
    "lib": ["ES2019", "DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules"]
}
